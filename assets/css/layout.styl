*
  margin 0
  padding 0
  -moz-user-select none
  -webkit-user-select none

$font-size = 40px

$screen-width = 1280px
$screen-height = 720px

$sidemenu-width = 100px

$header-height = 48px
$header-padding-height = 5px
$header-outer-height = $header-height + ($header-padding-height * 2)

$content-outer-width = $screen-width - $sidemenu-width
$content-padding-width = 10px
$content-width = $content-outer-width - ($content-padding-width * 2)
$content-height = 560px

$button-width = 200px
$button-height = 100px
$controller-button-width = 380px
$controller-button-height = 80px

$tooltip-width = $content-width - 60px
$tooltip-height = $button-height
$tooltip-padding-around = 10px
$tooltip-outer-height = $tooltip-height + ($tooltip-padding-around * 2)
$tooltip-position-left = $sidemenu-width + $content-padding-width + 20px
$tooltip-position-top = $screen-height - $tooltip-outer-height - 20px

$background-color-deep = #0e91f2
$background-color-thin = #f0f9ff


.hidden
  display none

body
  overflow hidden
  font-size $font-size

#container
  width $screen-width
  height $screen-height
  background-color $background-color-thin
  background -moz-linear-gradient(
        top, $background-color-deep, $background-color-thin
      )
  background -webkit-gradient(
        linear, left top, right bottom,
        from($background-color-thin), to($background-color-deep)
      )

#main
  .sidemenu
    float left
    width $sidemenu-width
    font-size 20px

    img.logo
      width $sidemenu-width + 30px

    .item
      width $sidemenu-width - 8px
      height 40px
      line-height 40px
      margin 25px 0
      padding 10px 5px
      color #fff
      background-color #000

      &.selected
        border solid 1px #f00
        border-left none
      border-radius 0 30px 30px 0

  .content
    position relative
    margin-left $sidemenu-width

  header
    line-height $header-height
    height $header-height
    vertical-align bottom
    color #002
    padding 5px 0px 5px 40px

  .pane
    width $content-width
    height $content-height
    padding 0 $content-padding-width
    background transparent

  .overlay
    display none
    position absolute
    width $content-width - 20px
    height $content-height
    top $header-height
    left $content-padding-width

.table
  display table
  margin 0 auto

  .row
    display table-row

  .cell
    display table-cell
    vertical-align middle
    padding 8px 10px


button
  width $button-width
  height $button-height

  font-size $font-size

  color #000
  background-color #eee
  border-radius 30px
  outline none

  &.hover
  &:hover
    background-color #fbfbb9

  &.gaze-focus
    background-color #fff0f5

  &:active
    background-color #fbfbb9
    color #f66;

  &.calibrating
    background-color #888

  &:disabled
    color #eee
    background-color #ccc
    border-color #888


#prices
  button
    font-weight bold
    width ($content-width / 5) - 20px
    height ($content-height / 4) - 20px

    &.line-keikyu
      color #fff
      background-color #00ccff
    &.line-toei
      color #fff
      background-color #e85298


#payment
  padding 100px 30px

  #ticket_info
    display inline-block
    width 420px
    height 200px
    padding 20px
    background-color #fffff0
    border 1px solid #333
    vertical-align top
    text-align center

    .detail
      vertical-align bottom

    .price
      font-size $font-size * 1.2
      font-weight bold

  #payment_info
    font-size $font-size * 1.2
    display inline-block

    .money-info
      margin 0 0 80px 50px

      label
        display inline-block
        width 5em

      .price
        display inline-block
        width 4em
        text-align right
        font-weight bold

      .unit
        display inline-block
        padding-left 10px

    #money_change
      color #e00


#station_search
  header
    text-align center

  button
    width 75px
    height 70px
    border-radius 20px

  #search_by_name
    display block

  #search_by_number
    display block


#station_choice
  padding 20px

  div.left
  div.center
  div.right
    display inline-block
    vertical-align middle

  div.center
    width 930px

  button.letter
    width 100px
    height 300px
    background-color transparent

  button.station
    width 290px

    .name
      display block
      margin 0 auto
      font-weight bold

    .subname
      display block
      font-size 30px
      line-height 10px

    .line
    .price
    .unit
      display inline-block
      font-size 30px

    .line
      padding-right 5px


#railway_map
  .pane
    width $content-width - 40px
    height $content-height - 20px
    background-color rgb(179,209,255)

  .station
    circle
      stroke #000
      fill #fff


#main-controller
  position absolute
  top $header-height + $content-height + 10px
  width $content-outer-width

  .table
    margin 0 auto

  .raw
    display table-row

.controller
  margin 0 auto
  text-align center

  button
    width $controller-button-width
    height $controller-button-height
    margin 0 10px

  #calibrate
    width 200px
    &.selected
      background-color #f00

#tooltip
  display none
  position absolute
  overflow hidden
  left $tooltip-position-left
  top $tooltip-position-top
  width $tooltip-width
  height $tooltip-height
  border 1px solid $background-color-deep
  background #fbfbb9
  padding $tooltip-padding-around
  border-radius $tooltip-padding-around
  font-size 20px

  em
    font-size 26px
    font-weight bold

.cursor
  display none
  width 20px
  height 20px
  border 1px solid #000

#gaze-cursor
  border-color red

#tip-cursor
  border-color blue
  &.touching
    background-color blue
  &.zooming
    background-color green

#debug
  margin 10px
  background-color #eee
  font-size 12px
  height 400px
  overflow scroll



#lang-selector
  .eye
    position absolute
    width 100px
    height 60px
    display none

  #cursor
    position  absolute
    width  50px
    height  50px
    border  solid 1px #f00
    display none

  .langbutton
    margin 0 auto
    vertical-align middle

  .glow
    border-radius 22px
    -webkit-border-radius 22px
    -mozborder-radius 22px
    box-shadow rgba(0, 88, 181, 0.75) 0px 0px 20px 8px
    -webkit-box-shadow rgba(0, 88, 181, 0.75) 0px 0px 20px 8px
    -mozbox-shadow rgba(0, 88, 181, 0.75) 0px 0px 20px 8px

  .area
    float left
    width 630px
    height 360px
    line-height 360px
    vertical-align middle
    text-align center

  ul.loadbar
    list-style none
    position relative
    width 140px
    margin -90px auto
    display none

  ul.loadbar li
    float left
    position relative
    width 11px
    height 26px
    margin-left 1px
    border-left 1px solid #111
    border-top 1px solid #111
    border-right 1px solid #333
    border-bottom 1px solid #333
    background #000

  .ins
    background-color #2187e7;
    background-image -moz-linear-gradient(45deg, #2187e7 25%, #a0eaff)
    background-image -webkit-linear-gradient(45deg, #2187e7 25%, #a0eaff)
    width 11px
    height 26px
    opacity 0

