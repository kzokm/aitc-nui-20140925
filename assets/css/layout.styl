*
  margin 0
  padding 0
  -moz-user-select none
  -webkit-user-select none

$font-size = 32pt

$screen-width = 1280px
$screen-height = 720px

$sidemenu-width = 100px

$header-height = 48px
$header-padding-height = 5px
$header-outer-height = $header-height + ($header-padding-height * 2)

$content-outer-width = $screen-width - $sidemenu-width
$content-padding-width = 10px
$content-width = $content-outer-width - ($content-padding-width * 2)
$content-height = 560px

$button-width = 200px
$button-height = 100px
$controller-button-width = 380px
$controller-button-height = 80px

$tooltip-width = $content-width - 60px
$tooltip-height = $button-height
$tooltip-padding-around = 10px
$tooltip-outer-height = $tooltip-height + ($tooltip-padding-around * 2)
$tooltip-position-left = $sidemenu-width + $content-padding-width + 20px
$tooltip-position-top = $screen-height - $tooltip-outer-height - 20px

$background-color-deep = #0e91f2
$background-color-thin = #f0f9ff


.hidden
  display none

body
  overflow hidden
  font-size $font-size

#container
  width $screen-width
  height $screen-height
  background-color $background-color-thin
  background -moz-linear-gradient(
        top, $background-color-deep, $background-color-thin
      )
  background -webkit-gradient(
        linear, left top, right bottom,
        from($background-color-thin), to($background-color-deep)
      )

#main
  .sidemenu
    float left
    width $sidemenu-width
    font-size 16pt

    img.logo
      width $sidemenu-width + 30px

    .item
      width $sidemenu-width - 8px
      height 40px
      line-height 40px
      margin 25px 0
      padding 10px 5px
      color #fff
      background-color #000

      &.selected
        border solid 1px #f00
        border-left none
      border-radius 0 30px 30px 0

  .content
    position relative
    margin-left $sidemenu-width

  header
    line-height $header-height
    height $header-height
    vertical-align bottom
    color #002
    padding 5px 0px 5px 40px

  .pane
    width $content-width
    height $content-height
    padding 0 $content-padding-width
    background transparent

  .overlay
    display none
    position absolute
    width $content-width - 20px
    height $content-height
    top $header-height
    left $content-padding-width

.table
  display table
  margin 0 auto

  .row
    display table-row

  .cell
    display table-cell
    vertical-align middle
    padding 8px 10px


button
  width $button-width
  height $button-height

  font-size $font-size

  color #000
  background-color #eee
  border-radius 30px
  outline none

  &.hover
  &:hover
    background-color #fbfbb9

  &.gaze-focus
    background-color #fff0f5

  &:active
    background-color #fbfbb9
    color #f66;

  &.calibrating
    background-color #888

  &:disabled
    color #eee
    background-color #ccc
    border-color #888


#prices
  button
    font-weight bold
    width ($content-width / 5) - 20px
    height ($content-height / 4) - 20px


#payment
  padding 100px 30px

  #ticket_info
    display inline-block
    width 420px
    height 200px
    padding 20px
    background-color #fffff0
    border 1px solid #333
    vertical-align top
    text-align center

    .detail
      vertical-align bottom

    .price
      font-size $font-size * 1.2
      font-weight bold

  #payment_info
    font-size $font-size * 1.2
    display inline-block

    .money-info
      margin 0 0 80px 50px

      label
        display inline-block
        width 5em

      .price
        display inline-block
        width 4em
        text-align right
        font-weight bold

      .unit
        display inline-block
        padding-left 10px

    #money_change
      color #e00


#station_search
  header
    text-align center

  button
    width 75px
    height 70px
    border-radius 20px

  #search_by_name
    display block

  #search_by_number
    display block


#station_choice
  padding 20px

  div.left
  div.center
  div.right
    display inline-block
    vertical-align middle

  div.center
    width 930px

  div.back
    text-align center
    button
      width 360px

  button.station
    width 290px

  button.letter
    width 100px
    height 300px
    background-color transparent


  .name
    display block
    margin 0 auto
    font-weight bold

  .line
  .price
  .unit
    display inline-block
    font-size 20pt
    height 40px

  .line
    padding-right 5px


#railway-map
  .pane
    width $content-width - 40px
    height $content-height - 20px
    background-color #fffaf0

  circle.station
    stroke #000
    fill #fff


#main-controller
  display table
  margin 0 auto
  .raw
    display table-row
  button
    width $controller-button-width
    height $controller-button-height
    margin 0 10px
    &.selected
      background-color #f00

  #calibrate
    width 200px

#tooltip
  display none
  position absolute
  left $tooltip-position-left
  top $tooltip-position-top
  width $tooltip-width
  height $tooltip-height
  border 1px solid $background-color-deep
  background #fbfbb9
  padding $tooltip-padding-around
  border-radius $tooltip-padding-around
  font-size 20px

  em
    font-size 26px
    font-weight bold

.cursor
  display none
  width 20px
  height 20px
  border 1px solid #000

#gaze-cursor
  border-color red

#tip-cursor
  border-color blue
  &.touching
    background-color blue


#debug
  margin 10px
  background-color #eee
  font-size 10pt
  height 400px
  overflow scroll
